{
  "name": "nebula-test-fragment",
  "version": "0.1.1",
  "description": "Base fragment and utilities for e2e testing",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mt0erfztxt/nebula-test-fragment.git"
  },
  "author": "Sergey Kozhevnikov <mt0erfztxt@gmail.com>",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "npm run compile",
    "compile": "rm -rf lib && npx babel src -d lib",
    "ci-tests": "npm run test-node && npm run test-browser_browserstack",
    "local-tests": "npm run test-node && npm run test-browser_local",
    "mocha": "mocha --require babel-core/register",
    "test": "npm run ci-tests",
    "test-browser_browserstack": "testcafe 'browserstack:Chrome@53.0:Windows 10' test/browser",
    "test-browser_local": "testcafe chrome test/browser",
    "test-node": "mocha --require babel-core/register test/node/**"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "change-case": "^3.0.1",
    "deep-object-diff": "^1.1.0",
    "escape-string-regexp": "^1.0.5",
    "lodash": "^4.17.10",
    "testcafe": "^1.1.0",
    "typeof--": "^1.3.3",
    "url-parse": "^1.1.9"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.6.1",
    "mocha": "^6.0.2",
    "nyc": "^11.7.1",
    "sinon": "^7.2.6",
    "testcafe-browser-provider-browserstack": "^1.4.0",
    "unexpected": "^11.1.1",
    "unexpected-sinon": "^10.11.1"
  }
}
